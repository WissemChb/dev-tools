{
	"id": "devtools",
	"version": "0.3.0",
	"name": "devtools",
	"description": "Preinstall devcontainer and setup dev prerequisites for cloud native and SRE environments",
	"options": {
		"zsh_plugins": {
			"type": "string",
			"description": "The ZSH plugins used to enhance commands running",
			"default": ""
		}
	},
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "bash",
						"icon": "terminal-bash"
					},
					"zsh": {
						"path": "zsh",
						"icon": "terminal-linux"
					}
				},
				"terminal.integrated.defaultProfile.linux": "zsh"
			},
			"extensions": [
				"mads-hartmann.bash-ide-vscode",
				"docsmsft.docs-yaml",
				"eamodio.gitlens",
				"donjayamanne.githistory",
				"GitHub.vscode-pull-request-github",
				"codezombiech.gitignore",
				"bierner.github-markdown-preview",
				"github.vscode-github-actions",
				"GitHub.remotehub",
				"TeamHub.teamhub",
				"ms-kubernetes-tools.vscode-kubernetes-tools",
				"sourcegraph.sourcegraph"
			]
		}
	},
	"mounts": [
		{
			"source": "devcontainer-shellhistory",
			"target": "/dc/shellhistory",
			"type": "volume"
		},
		{
			"source": "${env:HOME}${env:USERPROFILE}/.aws",
			"target": "/home/vscode/.aws",
			"type": "bind"
		},
		{
			"source": "${env:HOME}${env:USERPROFILE}/.kube",
			"target": "/home/vscode/.kube",
			"type": "bind"
		}
	],
	"installsAfter": [
		"ghcr.io/devcontainers/features/common-utils"
	]
}